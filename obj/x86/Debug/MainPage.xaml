<Page x:ConnectionId='1'
    x:Class="soundBoard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data1="using:soundBoard"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='8' Name="list_button"
                    RelativePanel.AlignLeftWithPanel="True"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE71D;"
                    FontSize="30"
                    Background="DimGray"
                    Foreground="White"
                                             />
            <Button x:ConnectionId='9' Name="back_button"
                    RelativePanel.RightOf="list_button"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE72B;"
                    FontSize="30"
                    Margin="5,0,0,0"
                    Background="DimGray"
                    Foreground="White"
                                             />
            <TextBlock x:ConnectionId='10' Name="main_textblock"
                       Text="All Sounds"
                       FontStyle="Italic"
                       FontWeight="Light"
                       Foreground="White"
                       FontSize="30"
                       RelativePanel.RightOf="back_button"
                       Margin="10,0,0,0"/>
        </RelativePanel>
        <SplitView x:ConnectionId='2' Name="main_splitview"
                   Grid.Row="1"
                   IsPaneOpen="False"
                   DisplayMode="CompactInline"
                   CompactPaneLength="45"
                   OpenPaneLength="150">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="main_listview"
                          IsItemClickEnabled="True"
                                                          
                          Background="DimGray"
                                                             >
                    <ListView.ItemTemplate>
                        <DataTemplate                        >
                            <StackPanel x:ConnectionId='4' Orientation="Horizontal"
                                        Height="70">
                                <Image x:ConnectionId='5' Height="40"
                                       Width="40"
                                       Margin="-10,0,0,0"
                                                                 />
                                <TextBlock x:ConnectionId='6'                         
                                           FontSize="20"
                                           Foreground="LightBlue"
                                           FontStyle="Italic"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='7' Name="main_frame">

                </Frame>
            </SplitView.Content>

        </SplitView>
    </Grid>
</Page>

